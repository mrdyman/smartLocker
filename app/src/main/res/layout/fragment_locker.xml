<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.LockerFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_locker_setting"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img_locker"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/finance" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_nama_locker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/cv_img_locker"
                android:fontFamily="@font/helveticabold"
                android:gravity="center"
                android:text="NAMA LOCKER"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_nama_locker"
                android:layout_toEndOf="@id/cv_img_locker"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/helveticaroundedbold"
                        android:text="Sisa Waktu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:fontFamily="@font/helveticaroundedbold"
                        android:textSize="15sp"
                        android:layout_marginStart="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/helveticaroundedbold"
                        android:text="120 Menit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Locker Status"
                        android:fontFamily="@font/helveticaroundedbold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:fontFamily="@font/helveticaroundedbold"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OPENED"
                        android:fontFamily="@font/helveticaroundedbold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_tambah_waktu"
                        android:layout_marginStart="10dp"
                        android:layout_width="119dp"
                        android:layout_height="35dp"
                        app:cornerRadius="20dp"
                        android:text="Tambah Waktu"
                        android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:layout_marginStart="10dp"
                        android:id="@+id/btn_end"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:text="End"
                        android:textSize="10sp"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:text="BUKA"
                        android:textSize="10sp"
                        android:layout_marginStart="10dp"
                        app:cornerRadius="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>